<h1>New Event</h1>

<%= form_for(:event, url: events_path) do |f| %>

<p>
  <%= f.label :title %> <br/>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :location %><br />
  <%= f.text_field :location%>
</p>

<p>
  <%= f.label :description %><br />
  <%= f.text_area :description%>
</p>

<p>
  <%= f.label :date %><br />
  <%= f.date_field :date%>
</p>
<p>
  <%= f.submit %>
</p>

<% end %>
